---
import Navigation from "../global/Navigation.astro";
const { title } = Astro.props;
const { slogan } = Astro.props;
---

<section
  style="background-color: #161616; background-image: url('mars-2-min.jpg'); background-size: cover; background-position: center"
>
  <Navigation activePage="researchers" />
  <div
    class="mx-auto w-full lg:px-24 max-w-7xl md:px-12 items-center px-8 py-24"
  >
    <div>
      <div class="text-center max-w-4xl mx-auto">
        <div class="flex justify-center">
          <img src="nodes-c.png" class="w-28" style="filter:invert(1)" />
        </div>
        <p
          class="dark12 mt-8 font-extrabold lg:text-5xl text-4xl tracking-tight"
        >
          {title}
        </p>
        <p class="dark12 lg:text-xl max-w-2xl mt-4 mx-auto text-base">
          {slogan}
        </p>
      </div>
      <div class="flex justify-center gap-3 mt-10 flex-col sm:flex-row">
        <a
          class="button-primary launch-button"
          href="https://nodes.desci.com"
          target="_blank"
        >
          <img src="nodes-c.png" class="w-7" />Launch
        </a>
      </div>
    </div>
    <div
      class="relative w-full mx-auto max-w-7xl items-center py-12 pb-12 md:pb-16"
    >
      <img
        alt=""
        style="border-color: var(--gray-dark-a6); border-width: 1px;"
        class="relative w-full lg:rounded-2xl object-cover rounded shadow-2xl"
        src="Node Home 2.png"
      />
    </div>
  </div>
</section>
