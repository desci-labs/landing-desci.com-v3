const title = "Let's build the future of science, together";
const slogan = "New infrastructure for the next era of science";

// INPUT CONTENT FOR OVERVIEW SECTION HERE

const ov_header = "Opening up science to everyone";
const ov_subheader =
  "DeSci infrastructure is designed to be accessible to all and controlled by no one, an open protocol where anyone can participate, collaborate, and contribute toward moving science forward.";

// Overview Items

const ov_item1_header = "Publications, reimagined";
const ov_item1_content =
  "Replace static PDFs with rich, interoperable research ecosystems. Unite manuscripts, code and data with seamless simplicity, all in one place.";

const ov_item2_header = "Trust, enhanced";
const ov_item2_content =
  "Build trust in scientific findings. Reward quality research and open science practices with verified badges as digitally signed attestations.";

const ov_item3_header = "Credit, where itâ€™s due";
const ov_item3_content =
  "Credit is transparently tracked, and authors can accept new collaborators that have contributed to substantially enrich their work.";

const ov_item4_header = "Access, ensured";
const ov_item4_content =
  "Simple, usable persistent identifiers for your work. No more dead links, content drift, or data silos. Everything is trackable, timestamped, transparent and owned by you.";

// INPUT CONTENT FOR TARGET GROUP SECTION

const tg_header = "A new frontier for open science";
const tg_subheader =
  "No single individual, organisation, or institution can do it alone. But collectively, we can create a world in which anyone can participate, collaborate, and contribute toward moving science forward.";

// Target Group Items

const tg1_name = "Researchers";
const tg1_argument = "Bring your research to life";

const tg2_name = "Journals & Curation Communities";
const tg2_argument = "Lead open science forward";

const tg3_name = "Libraries & Universities";
const tg3_argument = "Reclaim institutional sovereignty";

const tg5_name = "Network Operators";

const tg4_name = "Application Developers";

// INPUT SECTION FOR METRICS

const m_header = "A protocol for open science powered by the decentralized web";
const m_subheader =
  "Come build the next generation of scientific applications on a radically open and extensible protocol.";

// Metric Items

const m_item1_caption = "Persistent identifiers issued";
const m_item1_value = "20,000+";
const m_item1_subheader = "Uniquely identified digital objects";

const m_item2_caption = "Data stored";
const m_item2_value = "20+ Terabytes";
const m_item2_subheader = "Digital object data secured by the network";

const m_item3_caption = "Addressable legacy PIDs";
const m_item3_value = "190M+";
const m_item3_subheader = "DOIs ready to be upgraded with dPIDs";

// INPUT SECTION END

import BaseLayout from "../layouts/BaseLayout.astro";
import ProtocolHero from "../components/landing/LandingHero.astro";
import TargetGroups from "../components/landing/TargetGroups.astro";
import Footer from "../components/global/Footer.astro";
import { AstroSeo } from "@astrolib/seo";
import Welcome from "../components/landing/Welcome.astro";
import Overview from "../components/landing/Overview3.astro";
import Metrics from "../components/landing/Metrics.astro";
---

<AstroSeo
  title="DeSci Labs"
  description="DeSci enables researchers and academic organizations to securely share and collaborate using decentralized science technology."
  canonical="https://www.desci.com"
  openGraph={{
    url: "https://www.desci.com",
    title: "DeSci Labs",
    description: "Building the future of science",
    images: [
      {
        url: "preview.png",
        width: 1200,
        height: 630,
        alt: "Social open graph",
        type: "image/png",
      },
    ],
    site_name: "DeSci Labs",
  }}
  twitter={{
    handle: "@DeSciLabs",
    site: "@site",
    cardType: "summary_large_image",
  }}
/>
<BaseLayout>
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-6R6GMN7NPT"
  ></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag() {
      dataLayer.push(arguments);
    }
    gtag("js", new Date());

    gtag("config", "G-6R6GMN7NPT");
    gtag("config", "AW-16555145141");
    gtag("config", "AW-10927927501");
  </script>
  <script>
    setTimeout(() => {
      const tabButtons = document.querySelectorAll(".tab-button");
      const tabPanes = document.querySelectorAll(".tab-pane");

      tabButtons.forEach((button) => {
        button.addEventListener("click", function () {
          tabButtons.forEach((btn) => btn.classList.remove("active"));
          this.classList.add("active");

          tabPanes.forEach((pane) => pane.classList.remove("active"));
          const selectedTab = document.getElementById(
            this.getAttribute("data-tab")
          );
          selectedTab.classList.add("active");
        });
      });
    }, 0);
  </script>
  <ProtocolHero slogan={slogan} title={title} />
  <Welcome
    ov_header={ov_header}
    ov_subheader={ov_subheader}
    ov_item1_header={ov_item1_header}
    ov_item1_content={ov_item1_content}
    ov_item2_header={ov_item2_header}
    ov_item2_content={ov_item2_content}
    ov_item3_header={ov_item3_header}
    ov_item3_content={ov_item3_content}
    ov_item4_header={ov_item4_header}
    ov_item4_content={ov_item4_content}
  />
  <TargetGroups
    tg_header={tg_header}
    tg_subheader={tg_subheader}
    tg1_name={tg1_name}
    tg1_argument={tg1_argument}
    tg2_name={tg2_name}
    tg2_argument={tg2_argument}
    tg3_name={tg3_name}
    tg3_argument={tg3_argument}
    tg4_name={tg4_name}
    tg5_name={tg5_name}
  />
  <Metrics
    m_header={m_header}
    m_subheader={m_subheader}
    m_item1_caption={m_item1_caption}
    m_item1_value={m_item1_value}
    m_item1_subheader={m_item1_subheader}
    m_item2_caption={m_item2_caption}
    m_item2_value={m_item2_value}
    m_item2_subheader={m_item2_subheader}
    m_item3_caption={m_item3_caption}
    m_item3_value={m_item3_value}
    m_item3_subheader={m_item3_subheader}
  />
  <Footer />
</BaseLayout>
